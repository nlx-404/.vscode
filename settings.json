{
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#282A35",
    "titleBar.inactiveBackground": "#282A35",
    "editorGroupHeader.tabsBackground": "#16171C",
    "editorGroupHeader.noTabsBackground": "#16171C",
    "tab.inactiveBackground": "#1E1F28",
    "editorCursor.foreground": "#FFFFFF",
    "statusBar.background": "#21222B"
  },
  "window.zoomLevel": 2,
  "vsicons.presets.hideExplorerArrows": true,
  "scm.diffDecorations": "none",
  "editor.guides.bracketPairs": false,
  "git.decorations.enabled": false,
  "git.enableMiniMap": false,
  "editor.guides.indentation": false,
  "editor.renderWhitespace": "none",
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "code-runner.runInTerminal": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.showExecutionMessage": false,
  "vsicons.dontShowNewVersionMessage": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "explorer.confirmDelete": false,
  "cmake.showOptionsMovedNotification": false,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "workbench.iconTheme": "vscode-icons",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["h"]
    },
    {
      "before": ["k"],
      "after": ["l"]
    },
    {
      "before": ["h"],
      "after": ["k"]
    },
    {
      "before": ["l"],
      "after": ["j"]
    }
  ],
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false
  },

  "vim.leader": ",",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", ";"],
      "commands": ["workbench.view.explorer"]
    }
  ],
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "workbench.sideBar.location": "right",
  "window.commandCenter": false,
  "workbench.activityBar.location": "hidden",
  "codeium.enableCodeLens": false,
  "editor.accessibilitySupport": "off",
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "Dracula Theme",
  "editor.scrollbar.verticalScrollbarSize": 6,
  "editor.scrollbar.horizontalScrollbarSize": 10,
  "editor.scrollbar.vertical": "hidden",
  "editor.occurrencesHighlight": "off",
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.matchBrackets": "never",
  "editor.glyphMargin": false,
  "vim.statusBarColorControl": false
}
